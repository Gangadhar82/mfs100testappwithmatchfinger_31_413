<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MFS100SampleActivity"
    tools:ignore="UnknownIdInLayout" >

    <AbsoluteLayout
        android:id="@+id/AbsoluteLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/Finger1"
            android:layout_width="240dp"
            android:layout_height="200dp" />

        <Button
            android:id="@+id/btnStopCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="440dp"
            android:layout_y="9dp"
            android:text="Stop Capture" />

        <Button
            android:id="@+id/btnExtract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="575dp"
            android:layout_y="9dp"
            android:text="Extract" />

        <Button
            android:id="@+id/btnCapture1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="320dp"
            android:layout_y="9dp"
            android:text="Capture Finger" />

        <Button
            android:id="@+id/btnInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="9dp"
            android:text="Init" />

        <Button
            android:id="@+id/btnUninit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="670dp"
            android:layout_y="9dp"
            android:text="UnInit" />

        <Button
            android:id="@+id/btnMatchFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="130dp"
            android:text="Match Finger" />

        <Button
            android:id="@+id/btnReadFinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="380dp"
            android:layout_y="130dp"
            android:text="Read Finger" />

        <TextView
            android:id="@+id/textMsgView"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:layout_x="260dp"
            android:layout_y="100dp"
            android:text="Test" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:id="@+id/savebutton"
            android:layout_x="277dp"
            android:layout_y="212dp" />


    </AbsoluteLayout>


</RelativeLayout>